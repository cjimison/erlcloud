%% -*- mode: erlang;erlang-indent-level: 4;indent-tabs-mode: nil -*-
{erl_opts,
 [debug_info,
  %% warnings_as_errors, % disabled due to disabled function
  strict_validation,
  warn_bif_clash,
  warn_deprecated_function,
  warn_export_all,
  warn_export_vars,
  warn_exported_vars,
  warn_obsolete_guard,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_unused_record,
  warn_unused_vars]}.

{deps, [
	{meck, "0.*",   {git, "git://github.com/eproxus/meck.git", {tag, "0.8.2"}}},
        {meck, "0.8.*", {git, "git://github.com/cjimison/meck.git", {branch, "0.8.x"}}}, 
        {jsx, ".*", {git, "https://github.com/talentdeficit/jsx.git", {tag, "v2.0.4"}}},
        {lhttpc, ".*", {git, "git://github.com/talko/lhttpc", "master"}}
       ]}.
